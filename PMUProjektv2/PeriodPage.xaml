<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMUProjektv2.PeriodPage"
             Title="Calculate Period">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label 
                Text="Calculation of Period from Frequency" 
                FontSize="24" 
                HorizontalOptions="Center"/>

            <Entry 
                x:Name="frequencyEntry" 
                Placeholder="Frequency (in Hz)"/>

            <Button 
                Text="Calculate Period" 
                Clicked="OnCalculatePeriodClicked" 
                HorizontalOptions="Center"/>

            <Label 
                x:Name="periodResultLabel" 
                Text="Period: " 
                FontSize="18" 
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
